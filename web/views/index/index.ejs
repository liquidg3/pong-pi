
<div data-ng-click="selectTeam('left')" class="left-team side-select-column" data-ng-if="!side">

    <div class="icon">
        &lt;-
    </div>

</div>

<div data-ng-click="selectTeam('right')" class="right-team side-select-column" data-ng-if="!side">

    <div class="icon">
        ->
    </div>

</div>

<h1 class="select-team" data-ng-if="!side">
    Select a Side
</h1>

<div data-ng-if="side && !player">

    <form class="username-wrapper">

        <label>enter your username</label>
        <input type="text" data-ng-model="username"/>
        <button type="button" data-ng-click="joinGame(username)">Join</button>

    </form>

    {{userName}}

</div>

<div class="join-now" data-ng-if="side && player && !joined">
    <button>Join Now!!</button>
</div>
